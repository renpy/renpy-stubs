from typing import Any

import renpy as renpy
from renpy.gl2.gl2model import GL2Model as GL2Model
from renpy.gl2.gl2draw import Gl2Draw as Gl2Draw
from renpy.uguu import GLint, GLuint

class GLTexture(renpy.gl2.gl2model.GL2Model):
    number: int
    loaded: bool
    texture_width: int
    texture_height: int
    bl: int
    bt: int
    br: int
    bb: int
    wrap_s: GLint
    wrap_t: GLint
    anisotropy: float
    mag_filter: GLint
    min_filter: GLint
    default_mag_filter: GLint
    default_min_filter: GLint

    def __init__(self, size: tuple[float, float], loader: TextureLoader, generate: bool = False) -> None: ...
    def add_mipmap(self) -> None: ...
    def allocate_texture(self, tex: GLuint, tw: int, th: int, properties: dict[str, Any] = {}) -> None: ...
    def from_render(self, what: Incomplete, properties: dict[str, Any]) -> None: ...
    def from_surface(self, surface: Incomplete, properties: dict[str, Any]) -> None: ...
    def get_number(self) -> int | None: ...
    def get_texture(self, i: int) -> GL2Model: ...
    def load(self) -> None: ...
    def load_gltexture(self) -> None: ...
    def load_gltexture_premultiplied(self) -> None: ...
    def mipmap_texture(self, tex: GLuint, tw: int, th: int, properties: dict[str, Any] = {}) -> None: ...
    def should_have_mipmaps(self, properties: dict[str, Any]) -> bool: ...
    def subsurface(self, rect: Incomplete) -> Incomplete: ...

class Texture(GLTexture): ...

class TextureLoader:
    max_texture_width: GLint
    max_texture_height: GLint
    max_anisotropy: float

    def __init__(self, draw: Gl2Draw) -> None: ...
    def cleanup(self) -> None: ...
    def get_texture_size(self) -> tuple[int, int]: ...
    def init(self) -> None: ...
    def load_one_surface(
        self, surf: Incomplete, bl: int, bt: int, br: int, bb: int, properties: dict[str, Any]
    ) -> Texture: ...
    def load_surface(self, surf: Incomplete, properties: dict[str, Any]) -> Texture | renpy.display.render.Render: ...
    def quit(self) -> None: ...
    def ready_one_texture(self) -> bool: ...
    def render_to_texture(self, what: Incomplete, properties: dict[str, Any]) -> Texture: ...
    def texture_axis(self, length: int, limit: int, border: int) -> tuple[int, int, int, int]: ...
