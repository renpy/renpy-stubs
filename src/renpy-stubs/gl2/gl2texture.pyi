class GLTexture(renpy.gl2.gl2model.GL2Model):
    number: int
    loaded: bool
    texture_width: int
    texture_height: int
    bl: int
    bt: int
    br: int
    bb: int
    wrap_s: GLint
    wrap_t: GLint
    anisotropy: float
    mag_filter: GLint
    min_filter: GLint
    default_mag_filter: GLint
    default_min_filter: GLint

    def __init__(self, size: tuple[Incomplete, Incomplete], loader: TextureLoader, generate: bool = False) -> None: ...
    def add_mipmap(self) -> None: ...
    def allocate_texture(self, tex: int, tw: int, th: int, properties={}) -> Incomplete: ...
    def from_render(self, what: Incomplete, properties: Incomplete) -> None: ...
    def from_surface(self, surface: Incomplete, properties: Incomplete) -> None: ...
    def get_number(self) -> None: ...
    def get_texture(self, i: int) -> GL2Model: ...
    def load(self) -> None: ...
    def load_gltexture(self) -> None: ...
    def load_gltexture_premultiplied(self) -> None: ...
    def mipmap_texture(self, tex: int, tw: int, th: int, properties={}) -> Incomplete: ...
    def should_have_mipmaps(self, properties: Incomplete) -> None: ...
    def subsurface(self, rect: Incomplete) -> None: ...

class Texture(GLTexture): ...

class TextureLoader:
    max_texture_width: GLint
    max_texture_height: GLint
    max_anisotropy: float

    def __init__(self, draw: Gl2Draw) -> None: ...
    def cleanup(self) -> None: ...
    def get_texture_size(self) -> None: ...
    def init(self) -> None: ...
    def load_one_surface(
        self, surf: Incomplete, bl: Incomplete, bt: Incomplete, br: Incomplete, bb: Incomplete, properties: Incomplete
    ) -> None: ...
    def load_surface(self, surf: Incomplete, properties: Incomplete) -> None: ...
    def quit(self) -> None: ...
    def ready_one_texture(self) -> None: ...
    def render_to_texture(self, what: Incomplete, properties: Incomplete) -> None: ...
    def texture_axis(self, length: Incomplete, limit: Incomplete, border: Incomplete) -> None: ...
